<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.rabina_2207057_cvbuilder.PreviewPageController">

    <ScrollPane fitToWidth="true"
                AnchorPane.topAnchor="0"
                AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0">

        <VBox spacing="20" prefWidth="600">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <!-- CV HEADER -->
            <VBox spacing="5">
                <Label text="Curriculum Vitae"
                       style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                <Label fx:id="lblCV"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            </VBox>

            <Separator/>

            <!-- PERSONAL INFORMATION -->
            <VBox spacing="10">
                <Label text="Personal Information"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Full Name:" GridPane.rowIndex="0"/>
                    <Label fx:id="lblFullName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Father Name:" GridPane.rowIndex="1"/>
                    <Label fx:id="lblFather" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Mother Name:" GridPane.rowIndex="2"/>
                    <Label fx:id="lblMother" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Email:" GridPane.rowIndex="3"/>
                    <Label fx:id="lblEmail" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Phone No:" GridPane.rowIndex="4"/>
                    <Label fx:id="lblPhone" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Date of Birth:" GridPane.rowIndex="5"/>
                    <Label fx:id="lblDOB" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Address:" GridPane.rowIndex="6"/>
                    <Label fx:id="lblAddress" wrapText="true"
                           GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <Separator/>

            <!-- EDUCATION SECTION -->
            <VBox spacing="10">
                <Label text="Educational Qualifications"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <!-- Exam 1 -->
                <VBox spacing="3">
                   <Label text="Exam 1:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblExam1"/>
                    <Label fx:id="lblBoard1"/>
                    <Label fx:id="lblGroup1"/>
                    <Label fx:id="lblResult1"/>
                    <Label fx:id="lblYear1"/>
                </VBox>

                <Separator/>

                <!-- Exam 2 -->
                <VBox spacing="3">
                    <Label text="Exam 2:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblExam2"/>
                    <Label fx:id="lblBoard2"/>
                    <Label fx:id="lblGroup2"/>
                    <Label fx:id="lblResult2"/>
                    <Label fx:id="lblYear2"/>
                </VBox>

                <Separator/>

                <!-- Exam 3 -->
                <VBox spacing="3">
                    <Label text="Exam 3:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblExam3"/>
                    <Label fx:id="lblBoard3"/>
                    <Label fx:id="lblGroup3"/>
                    <Label fx:id="lblResult3"/>
                    <Label fx:id="lblYear3"/>
                </VBox>

                <Separator/>

                <!-- Exam 4 -->
                <VBox spacing="3">
                    <Label text="Exam 4:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblExam4"/>
                    <Label fx:id="lblBoard4"/>
                    <Label fx:id="lblGroup4"/>
                    <Label fx:id="lblResult4"/>
                    <Label fx:id="lblYear4"/>
                </VBox>
            </VBox>

            <Separator/>

            <!-- SKILLS SECTION -->
            <VBox spacing="5">
                <Label text="Skills" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="lblSkills" wrapText="true"/>
            </VBox>

            <Separator/>

            <!-- PROJECT SECTION -->
            <VBox spacing="5">
                <Label text="Projects" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="lblProject" wrapText="true"/>
            </VBox>

            <Separator/>

            <!-- EXPERIENCE -->
            <VBox spacing="5">
                <Label text="Experience" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="lblExperience" wrapText="true"/>
            </VBox>

            <Separator/>

            <!-- BUTTONS -->
            <HBox spacing="20" alignment="center">
                <Button text="Back" style="-fx-padding: 8 20;" onAction="#goBack"/>
                <Button text="Exit" style="-fx-padding: 8 20;" onAction="#exitApp"/>
            </HBox>

        </VBox>

    </ScrollPane>

</AnchorPane>
